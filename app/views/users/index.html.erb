<h1 align="center">All Bloggers</h1>

<div align="center">
	<%= will_paginate %>
</div>

<% @users.each do |x| %>
	<ul class="listing">
		<div class="row">
			<div class="well col-md-4 col-md-offset-4">
				<li>
					<%= link_to gravatar_for(x), user_path(x) %> 
				</li>
				<li class="article-title">
					<%= link_to x.username,user_path(x) %>
				</li>
				<li style="border-top:1px solid #eaeaea">
					<small>
						<%= pluralize(x.articles.count, "article") if x.articles %>
					</small>
					<% if logged_in? and current_user.admin? %>
						<li><%= link_to "Delete this user", user_path(x), method: :delete, data: {confirm: "Are you sure you want to delete the user and all their articles"} %></li>
					<% end %>
				</li>
			</div>
		</div>
	</ul>
<% end %>

<div align="center">
	<%= will_paginate %>
</div>




